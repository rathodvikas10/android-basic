<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.vikasrathod.androidbasic">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.HomeActivity"
            android:label="Android Basic"/>
        <activity
            android:name=".ui.activity.ActivityBasicActivity"
            android:label="Activity Basic" />
        <activity
            android:name=".ui.activity.LifeCycleAActivity"
            android:label="Activity Lifecycle" />
        <activity
            android:name=".ui.activity.LifeCycleBActivity"
            android:theme="@style/AppTheme.Dialog"
            android:label="Activity Lifecycle"/>
        <activity
            android:name=".ui.activity.OnDestroyActivity"
            android:label="Activity Basic"/>
        <activity
            android:name=".ui.activity.ToastActivity"
            android:label="@string/toast" />
    </application>

</manifest>