<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.vikasrathod.androidbasic">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="in.vikasrathod.androidbasic.ui.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="in.vikasrathod.androidbasic.ui.activity.HomeActivity"
            android:screenOrientation="portrait"
            android:label="Android Basic"
            />

        <activity
            android:name="in.vikasrathod.androidbasic.ui.activity.ActivityBasicActivity"
            android:screenOrientation="portrait"
            android:label="Activity Basic"
            />

        <activity
            android:name="in.vikasrathod.androidbasic.ui.activity.OpenActivity"
            android:screenOrientation="portrait"
            android:label="Activity Basic"
            />
        <activity
            android:name="in.vikasrathod.androidbasic.ui.activity.OnDestroyActivity"
            android:screenOrientation="portrait"
            android:label="Activity Basic"
            />
    </application>

</manifest>
